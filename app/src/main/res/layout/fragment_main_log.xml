<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainLogFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/blue_77f"
        app:backgroundTint="@color/blue_77f"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:src="@mipmap/mark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clock_overlay"
        android:drawableStart="@mipmap/time"
        android:layout_gravity="top|end"
        android:gravity="center"
        android:text="2016-12-15"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:layout_marginTop="100dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        />
    <TextView
        android:id="@+id/tv_start_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:drawablePadding="20dp"
        android:textSize="20sp"
        android:drawableTop="@mipmap/timing"
        android:text="@string/start_timing"
        />
</FrameLayout>
