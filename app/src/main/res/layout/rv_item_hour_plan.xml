<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item_hour_plan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/rv_item_hour_plan_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="看网络相关"
        android:textSize="@dimen/font_16"
        app:layout_constraintEnd_toStartOf="@+id/rv_item_hour_plan_tv_start_time"
        app:layout_constraintStart_toEndOf="@+id/rv_item_hour_plan_iv_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_hour_plan_tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="已进行364天"
        app:layout_constraintBottom_toBottomOf="@+id/rv_item_hour_plan_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/rv_item_hour_plan_iv_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_item_hour_plan_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_item_hour_plan_tv_title"
        app:srcCompat="@mipmap/cancel_press" />

    <TextView
        android:id="@+id/rv_item_hour_plan_tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rv_item_hour_plan_iv_status"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_hour_plan_tv_title" />

    <ProgressBar
        android:id="@+id/rv_item_hour_plan_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toStartOf="@+id/rv_item_hour_plan_tv_progress"
        app:layout_constraintStart_toEndOf="@+id/rv_item_hour_plan_iv_status"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_hour_plan_tv_desc" />

    <TextView
        android:id="@+id/rv_item_hour_plan_tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="513/1000"
        app:layout_constraintBottom_toBottomOf="@+id/rv_item_hour_plan_progress"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>