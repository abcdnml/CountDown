<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingStart="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/rv_item_log_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/font_18"
            android:background="@drawable/bg_time_node"
            />
        <View
            android:id="@+id/rv_item_log_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue_77f"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/timeline_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/rv_item_log_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/font_16"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/rv_item_log_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/font_14"
            android:textColor="@color/gray_a6"
            android:singleLine="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/rv_item_log_title"
            />
        <TextView
            android:id="@+id/rv_item_log_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/font_14"
            android:layout_below="@id/rv_item_log_title"
            android:text="@string/life_length_question"
            />
    </RelativeLayout>
</LinearLayout>