<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/card_bg"
            android:padding="@dimen/dialog_padding"
    >
    <TextView
        android:id="@+id/tv_exam_essay_question"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="@dimen/font_18"
        android:padding="@dimen/text_padding"
        android:gravity="center_vertical"
        android:text="aaaaaaaaaaaaaaa"
        />
    <TextView
        android:id="@+id/tv_exam_essay_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/text_min_height"
        android:padding="@dimen/text_padding"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:text="bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
        />
</LinearLayout>